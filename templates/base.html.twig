<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    {% block stylesheets %}
    {% endblock %}

    {% block javascripts %}
    {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>

<body>
    <header class="bg-light border-bottom py-3 mb-4">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="h4 m-0">JeuxPasChers</h1>
            <form id="searchForm" action="{{ path('app_cheapshark_search') }}" method="get">
                <input type="text" name="title" placeholder="Rechercher un jeu...">
                {% for store in app.session.get('stores') %}

                <input type="checkbox" name="stores[]" id="{{ store }}" value="{{ store }}" checked>
                <label for="{{ store }}">{{ store }}</label>

                {% endfor %}
                <input type="submit" value="Rechercher">
            </form>
            <div>
                {% if app.user %}
                <span class="me-3">Bienvenue, {{ app.user.email }}</span>
                <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">Déconnexion</a>
                {% else %}
                <a href="{{ path('app_login') }}" class="btn btn-primary me-2">Connexion</a>
                <a href="{{ path('app_register') }}" class="btn btn-outline-primary">Inscription</a>
                {% endif %}
            </div>
        </div>
    </header>
    <main id="results" class="container">

        {% block body %}{% endblock %}

    </main>
</body>
