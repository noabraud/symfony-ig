<header class="sticky top-0 left-0 w-full bg-white shadow-sm border-b z-50">
    <div class="container mx-auto px-4">
        <div class="flex items-center justify-between h-16">
            {# LOGO #}
            <div class="flex items-center space-x-4">
                <h1 class="text-2xl font-bold text-blue-600 hover:text-blue-700">
                    <a href="{{ path('app_cheapshark_index') }}">
                        {{ 'welcome.title'|trans }}
                    </a>
                </h1>
                <span>

                </span>
            </div>
            {# NAVIGATION #}
            <nav class="hidden md:flex items-center space-x-8">
                <a href="{{ path('app_cheapshark_index') }}#recentReleases"
                    class="hover:text-blue-600 transition-colors">
                    {{ 'menu.new_releases'|trans }}
                </a>
                <a href="{{ path('app_cheapshark_index') }}#bestSavings" class="hover:text-blue-600 transition-colors">
                    {{ 'menu.best_savings'|trans }}
                </a>
                <a href="{{ path('app_cheapshark_index') }}#bestSellers" class="hover:text-blue-600 transition-colors">
                    {{ 'menu.best_sellers'|trans }}
                </a>
                <a href="{{ path('app_cheapshark_index') }}#platforms" class="hover:text-blue-600 transition-colors">
                    {{ 'menu.platforms'|trans }}
                </a>
            </nav>
            {# SEARCH FORM #}
            <form id="searchForm" action="{{ path('app_cheapshark_search') }}" method="get"
                class="hidden md:flex items-center space-x-4">
                <div class="relative">
                    <input type="text" name="title" placeholder="{{ 'menu.search'|trans }}"
                        class="pl-4 pr-12 py-2 w-80 bg-gray-100 rounded-md focus:outline-blue-600">
                    {# {% for store in app.session.get('stores') %}

                    <input type="checkbox" name="stores[]" id="{{ store }}" value="{{ store }}" checked>
                    <label for="{{ store }}">{{ store }}</label>

                    {% endfor %} #}
                    <button type="submit"
                        class="bg-blue-600 rounded-md px-2 py-1 absolute right-1 top-1/2 -translate-y-1/2 hover:bg-blue-700 transition-colors"><i
                            class="text-white fa-solid fa-magnifying-glass"></i></button>
                </div>
            </form>
            {# USER #}
            <div class="flex items-center space-x-3">
                {% if app.user %}

                <span class="me-3">{{ 'welcome.message'|trans }}, {{ app.user.email }}</span>
             
           
                {# <span class="me-3">{{ 'welcome.message'|trans }}, {{ app.user.email }}</span> #}
                <a href="{{ path('app_cart') }}"
                    class="rounded-md py-1 px-3 border border-blue-600 bg-blue-600 text-white hover:bg-blue-700 transition-colors"><i
                        class="fa-solid fa-cart-shopping"></i></a>
                <a href="{{ path('app_order_index') }}"
                    class="rounded-md py-1 px-3 border border-blue-600 bg-blue-600 text-white hover:bg-blue-700 transition-colors">{{'menu.orders'|trans}}</a>
                <a href="{{ path('app_user_games') }}" class="rounded-md py-1 px-3 border border-blue-600 bg-blue-600 text-white hover:bg-blue-700 transition-colors">{{'menu.my_games'|trans}}</a>
                <a href="{{ path('app_logout') }}"
                    class="rounded-md py-1 px-3 border border-red-600 hover:bg-gray-100 transition-colors">{{'menu.logout'|trans}}</a>
                {% else %}
                <a href="{{ path('app_login') }}"
                    class="rounded-md py-1 px-3 border border-blue-600 bg-blue-600 text-white hover:bg-blue-700 transition-colors">{{'menu.login'|trans}}</a>
                <a href="{{ path('app_register') }}"
                    class="rounded-md py-1 px-3 border border-blue-600 hover:bg-gray-100 transition-colors">{{'menu.register'|trans}}</a>
                {% endif %}
                <form action="{{ path('set_locale') }}" method="POST" style="display:inline;">
                    <select name="language" onchange="this.form.submit()">
                        <option value="fr" {{ app.request.getLocale()=='fr' ? 'selected' }}>Fran√ßais</option>
                        <option value="en" {{ app.request.getLocale()=='en' ? 'selected' }}>English</option>
                    </select>
                </form>
            </div>
        </div>
    </div>
</header>