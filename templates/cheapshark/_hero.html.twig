<section class="relative h-[400px] bg-gradient-to-r from-blue-900 via-purple-900 to-blue-900 overflow-hidden">

    {# Background image #}
    <div class="absolute inset-0">
        <img src="https://images.unsplash.com/photo-1614179924047-e1ab49a0a0cf?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3Nzg4Nzd8MHwxfHxnYW1pbmclMjBzZXR1cHxlbnwxfHx8fDE3NTY2NTg4ODZ8MA&ixlib=rb-4.1.0&q=80&w=1080&utm_source=figma&utm_medium=referral"
            alt="Gaming setup" class="w-full h-full object-cover opacity-30">
    </div>

    {# Filter #}
    <div class="absolute inset-0 bg-gradient-to-r from-blue-900/80 to-purple-900/80" />

    {# Content #}
    <div class="relative container mx-auto px-4 h-full flex items-center">
        <div class="max-w-2xl">
            <h1 class="text-4xl md:text-6xl font-bold text-white mb-4">
                    {{ 'home.message1'|trans }}
                <span class="block text-yellow-400">
                    {{ 'home.message2'|trans }}
                </span>
            </h1>
            <p class="text-xl text-gray-200 mb-8">
                {{ 'home.message3'|trans }}
            </p>
            <div class="flex flex-col sm:flex-row gap-4">
                <button class="rounded-lg px-6 py-2 bg-yellow-500 hover:bg-yellow-600 text-black font-semibold">
                    {{ 'home.explore'|trans }}
                </button>
                <button class="rounded-lg px-6 py-2 bg-white text-black hover:bg-gray-100 font-semibold">
                    {{ 'home.browse'|trans }}
                </button>
            </div>
        </div>
    </div>

    {# Floating elements #}
    <div class="absolute top-20 right-20 w-16 h-16 bg-yellow-400/20 rounded-full blur-xl" />
    <div class="absolute bottom-20 right-40 w-24 h-24 bg-purple-400/20 rounded-full blur-xl" />
</section>