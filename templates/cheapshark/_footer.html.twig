{# Newsletter section #}
<div class="border-b border-gray-800">
    <div class="container mx-auto px-4 py-8">
        <div class="flex flex-col md:flex-row items-center justify-between gap-6">
            <div>
                <h3 class="text-xl font-semibold mb-2">
                    {{'footer.offers'|trans}}
                </h3>
                <p class="text-gray-400">
                    {{'footer.message1'|trans}}
                </p>
            </div>
            <form action="" class="flex w-full md:w-auto gap-3">
                <input type="email" placeholder={{'footer.email'|trans}}
                    class="bg-gray-800 outline-gray-700 text-white placeholder-gray-400 min-w-[250px] px-4 rounded-md text-sm" />
                <button type="submit"
                    class="bg-blue-600 hover:bg-blue-700 transition-colors rounded-md px-4 py-2 text-sm font-semibold">
                    <i class="fa-regular fa-envelope"></i> {{'footer.subscribe'|trans}}
                </button>
            </form>
        </div>
    </div>
</div>

{# Main footer content #}
<div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {# Company info #}
        <div>
            <div class="text-2xl font-bold text-blue-400 mb-4">
                {{ 'welcome.title'|trans }}
            </div>
            <p class="text-gray-400 mb-4">
                {{ 'footer.message2'|trans }}
            </p>
            <div class="flex gap-8">
                <button class="text-gray-400 hover:text-white">
                    <i class="fa-brands fa-facebook"></i>
                </button>
                <button class="text-gray-400 hover:text-white">
                    <i class="fa-brands fa-x-twitter"></i>
                </button>
                <button class="text-gray-400 hover:text-white">
                    <i class="fa-brands fa-instagram"></i>
                </button>
                <button class="text-gray-400 hover:text-white">
                    <i class="fa-brands fa-youtube"></i>
                </button>
            </div>
        </div>

        {# Quick links #}
        <div>
            <h4 class="font-semibold mb-4">{{ 'footer.links'|trans }}</h4>
            <ul class="space-y-2">
                <li>
                    <a href="https://store.steampowered.com/" class="text-gray-400 hover:text-white transition-colors">
                        Steam
                    </a>
                </li>
                <li>
                    <a href="https://store.epicgames.com/fr/" class="text-gray-400 hover:text-white transition-colors">
                        Epic Games
                    </a>
                </li>
                <li>
                    <a href="https://www.gog.com/en/" class="text-gray-400 hover:text-white transition-colors">
                        GOG
                    </a>
                </li>
                <li>
                    <a href="https://store.ubisoft.com/us/home?lang=en_US" class="text-gray-400 hover:text-white transition-colors">
                        Ubisoft Connect
                    </a>
                </li>
            </ul>
        </div>

        {# Customer service #}
        <div>
            <h4 class="font-semibold mb-4">{{ 'footer.customer'|trans }}</h4>
            <ul class="space-y-2">
                <li>
                    <a href="#" class="text-gray-400 hover:text-white transition-colors">
                        {{ 'footer.faq'|trans }}
                    </a>
                </li>
                <li>
                    <a href="#" class="text-gray-400 hover:text-white transition-colors">
                        {{ 'footer.support'|trans }}
                    </a>
                </li>
                <li>
                    <a href="#" class="text-gray-400 hover:text-white transition-colors">
                        {{ 'footer.returns'|trans }}
                    </a>
                </li>
                <li>
                    <a href="#" class="text-gray-400 hover:text-white transition-colors">
                        {{ 'footer.contact'|trans }}
                    </a>
                </li>
                <li>
                    <a href="#" class="text-gray-400 hover:text-white transition-colors">
                        {{ 'footer.account'|trans }}
                    </a>
                </li>
            </ul>
        </div>

        {# Legal #}
        <div>
            <h4 class="font-semibold mb-4">{{ 'footer.informations'|trans }}</h4>
            <ul class="space-y-2">
                <li>
                    <a href="#" class="text-gray-400 hover:text-white transition-colors">
                        {{ 'footer.general_terms'|trans }}
                    </a>
                </li>
                <li>
                    <a href="#" class="text-gray-400 hover:text-white transition-colors">
                        {{ 'footer.privacy_policy'|trans }}
                    </a>
                </li>
                <li>
                    <a href="#" class="text-gray-400 hover:text-white transition-colors">
                        {{ 'footer.legal_notice'|trans }}
                    </a>
                </li>
                <li>
                    <a href="#" class="text-gray-400 hover:text-white transition-colors">
                        {{ 'footer.cookies'|trans }}
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>

{# Bottom footer #}
<div class="border-t border-gray-800">
    <div class="container mx-auto px-4 py-6">
        <div class="flex flex-col md:flex-row items-center justify-between gap-4">
            <p class="text-gray-400 text-center md:text-left">
                {{ 'footer.rights'|trans }}
            </p>
            <div class="flex items-center gap-4">
                <span class="text-gray-400">{{ 'footer.secured'|trans }}:</span>
                <div class="flex gap-2">
                    <div class="bg-white px-2 py-1 rounded text-xs font-semibold text-gray-900">
                        VISA
                    </div>
                    <div class="bg-white px-2 py-1 rounded text-xs font-semibold text-gray-900">
                        MC
                    </div>
                    <div class="bg-blue-600 px-2 py-1 rounded text-xs font-semibold text-white">
                        PayPal
                    </div>
                </div>
