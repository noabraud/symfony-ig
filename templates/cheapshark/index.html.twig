{% extends 'base.html.twig' %}

{% block title %}Promotions{% endblock %}

{#--- HERO ---#}
{% block hero %}
{% include 'cheapshark/_hero.html.twig' %}
{% endblock %}

{% block body %}

{# RECENT RELEASES #}
<section id="recentReleases" class="container mx-auto px-4 py-12 scroll-mt-8">
    <div class="mb-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-2">Nouveautés PC</h1>
            <p class="text-gray-600">Les dernières sorties sur les plateformes</p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {% for game in new %}
        {% include 'cheapshark/_gameCard.html.twig' with { game: game} %}
        {% endfor %}
    </div>
</section>

{# BEST SAVINGS #}
<section id="bestSavings" class="scroll-mt-8 bg-gradient-to-r from-blue-600/70 to-purple-900/70">
    <div class="container mx-auto px-4 py-12 ">
        <div class="mb-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-2">Meilleures promotions</h1>
                <p class="text-gray-50">Ne ratez pas ces offres exceptionnelles sur PC</p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            {% for game in savings %}
            {% include 'cheapshark/_gameCard.html.twig' with { game: game} %}
            {% endfor %}
        </div>
    </div>
</section>

{# BEST SELLERS #}
<section id="bestSellers" class="container mx-auto px-4 py-12 scroll-mt-8">
    <div class="mb-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-2">Jeux populaires</h1>
            <p class="text-gray-600">Les jeux PC les plus vendus</p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {% for game in best %}
        {% include 'cheapshark/_gameCard.html.twig' with { game: game} %}
        {% endfor %}
    </div>
</section>


{% endblock %}

{% block stats %}
{% include 'cheapshark/_globalStats.html.twig' %}
{% endblock %}