{% extends 'base.html.twig' %}

{% block title %}{{ title }} - Deals{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div>
    
</div>

<div class="example-wrapper">
    <h1>{{ title }}</h1>

    <img src="{{ image }}" alt="{{ title }}">

    <p>Prix le plus bas : {{ cheapest }}$</p>

    <h2>Deals disponibles :</h2>
    <ul>
        {% for deal in deals %}
        <li>
            Magasin {{ deal.storeID }} : {{ deal.price }}$ (au lieu de {{ deal.retailPrice }}$)
        </li>
        {% endfor %}

    </ul>

</div>
{% endblock %}
