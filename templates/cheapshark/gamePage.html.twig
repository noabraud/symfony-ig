{% extends 'base.html.twig' %}

{% block title %} Offres - {{ title }}{% endblock %}

{% block body %}

<div class="min-h-screen bg-gradient-to-r from-blue-600/70 to-purple-900/70">
    {# Return button #}
    <div class="bg-white border-b">
        <div class="container mx-auto px-4 py-4">
            <button class="flex items-center gap-2 px-3 py-2 rounded-lg font-semibold hover:bg-gray-100">
                <i class="fa-solid fa-arrow-left"></i>
                Retour
            </button>
        </div>
    </div>

    <div class="container mx-auto px-4 py-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

            {# Main content #}
            <div class="lg:col-span-2 space-y-8">

                {# Game header #}
                <div class="bg-gray-50 shadow-sm rounded-lg p-6">
                    <div class="flex flex-col md:flex-row gap-6">
                        <div class="md:w-1/3">
                            <img src="{{ image }}" alt="{{ title }}"
                                class="w-full h-64 md:h-80 object-cover rounded-lg">
                        </div>

                        <div class="md:w-2/3 space-y-4">
                            <div>
                                <h1 class="text-3xl font-bold text-gray-900 mb-2">{{ title }}</h1>

                                {# Genres #}
                            </div>

                            <div class="grid grid-cols-2 gap-4 text-sm">
                                {# Game infos #}
                            </div>
                        </div>
                    </div>
                </div>

                {# Screenshots carousel #}
                <div class="bg-gray-50 shadow-sm rounded-lg p-6">
                    <h2 class="text-xl font-semibold mb-4">Captures d'écran</h2>
                    <div class="relative">

                    </div>
                </div>

                {# Content tabs #}
                <div class="bg-gray-50 shadow-sm rounded-lg p-6">

                </div>
            </div>

            {# Sidebar #}
            <div class="lg:col-span-1">
                <div class="bg-gray-50 shadow-sm rounded-lg p-6 sticky top-20">
                    <h3 class="font-semibold mb-4">Acheter ce jeu</h3>

                    <div class="space-y-3 mb-6">
                        {% for deal in deals %}
                        <label class="block">
                            <input type="radio" name="platform" value="" class="sr-only">
                            <div class="border rounded-lg px-4 py-3 cursor-pointer transition-colors">
                                <div class="flex items-center justify-between">
                                    <div class="flex flex-col gap-2">
                                        {# Store badge #}
                                        <span class="bg-gray-200 rounded-md px-2 py-1 text-sm font-semibold">
                                            {{ app.session.get('stores')[deal.storeID] }}
                                        </span>

                                        {# Prices #}
                                        <div class="flex items-center gap-2">
                                            {% if deal.savings <= 0 %} {% set isOnSale=false %} <span
                                                class="font-bold text-gray-900">
                                                {{ deal.retailPrice }}€
                                                </span>
                                                {% else %}
                                                {% set isOnSale=true %}
                                                <span class="font-bold text-blue-600">
                                                    {% if deal.price <= 0 %} FREE {% else %} {{ deal.price }}€ {% endif
                                                        %} </span>
                                                        <span class="text-sm text-gray-500 line-through">
                                                            {{ deal.retailPrice }}€
                                                        </span>
                                                        <span
                                                            class="bg-red-600 text-white rounded-md px-2 py-1 text-xs font-semibold">
                                                            -{{ deal.savings|round(0) }}%
                                                        </span>
                                                        {% endif %}
                                        </div>
                                    </div>
                                    <i class="fa-solid fa-download text-gray-400"></i>
                                </div>
                            </div>
                        </label>
                        {% endfor %}
                    </div>

                    <button class="w-full bg-blue-600 hover:bg-blue-700 text-white rounded-md py-2">
                        <i class="fa-solid fa-cart-shopping"></i>
                        Ajouter au panier
                    </button>

                    {# Separator #}
                    <div class="bg-gray-200 w-full h-1 my-4 rounded-lg"></div>

                    {# More informations #}
                    <div class="space-y-3 text-sm">
                        <div class="flex items-center gap-2">
                            <i class="fa-solid fa-shield text-green-600"></i>
                            <span>Activation immédiate</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <i class="fa-solid fa-download text-blue-600"></i>
                            <span>Téléchargement numérique</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <i class="fa-solid fa-user-group text-purple-600"></i>
                            <span>Mode solo et multijoueur</span>
                        </div>
                    </div>

                    {# Separator #}
                    <div class="bg-gray-200 w-full h-1 my-4 rounded-lg"></div>

                    <div class="text-xs text-gray-600">
                        <p class="mb-2">
                            ✓ Garantie de remboursement 30 jours
                        </p>
                        <p class="mb-2">
                            ✓ Support client 24/7
                        </p>
                        <p class="mb-2">
                            ✓ Clé authentique garantie
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}