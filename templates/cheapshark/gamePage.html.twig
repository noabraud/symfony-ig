{% extends 'base.html.twig' %}

{% block title %}{{ title }} - Deals{% endblock %}

{% block body %}

<div>

</div>

<div>
    <h1>{{ title }}</h1>

    <img src="{{ image }}" alt="{{ title }}">

    <p>{{'gamepage.cheapest'|trans}} {{ cheapest }}$</p>

    <h2>{{'gamepage.deals'|trans}} :</h2>
    <ul>
        {% for deal in deals %}
        <li>
            {{'gamepage.store'|trans}} {{ app.session.get('stores')[deal.storeID] }} : {{ deal.price }}$ ({{'gamepage.instead'|trans}} {{ deal.retailPrice }}$)
        </li>
        {% endfor %}

    </ul>

</div>
{% endblock %}