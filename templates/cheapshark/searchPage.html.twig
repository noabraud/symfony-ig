{% extends 'base.html.twig' %}

{% block title %}Promotions{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div>

</div>

<div class="example-wrapper">
    <h1>Promotions</h1>
    {% for game in games %}
    <h2>{{ game.title }}</h2>
    <img src="{{ game.thumb }}" alt="{{ game.title }}">
    <p>{{ game.salePrice }}$ ({{ game.storeID }}) -{{ game.savings }}%</p>
    {% endfor %}
</div>
{% endblock %}