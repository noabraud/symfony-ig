{% extends 'base.html.twig' %}

{% block title %}Rechercher des jeux PC{% endblock %}

{% block body %}

<div class="min-h-screen bg-gradient-to-r from-blue-600/70 to-purple-900/70">

    <div class="container mx-auto px-4 py-8">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-50 mb-4">
                Rechercher des jeux PC
            </h1>
        </div>

        <div class="flex gap-8">
            {# FILTERS DESKTOP #}
            <form class="hidden lg:block w-80 bg-white rounded-lg p-6 h-fit sticky top-20">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="font-semibold text-gray-900">Filtres</h2>
                    <i class="fa-solid fa-filter w-5 h-5 text-gray-500"></i>
                </div>
                <div class="flex flex-col gap-6">

                    {# Platforms filter #}
                    <div>
                        <label class="font-medium mb-2 block">Plateformes</label>
                        <div class="flex flex-col gap-2 max-h-48 overflow-y-auto">
                            {% for store in app.session.get('stores') %}
                            <div class="flex gap-2">
                                <input type="checkbox" name="stores[]" id="{{ store }}" value="{{ store }}" checked>
                                <label for="{{ store }}">{{ store }}</label>
                            </div>
                            {% endfor %}
                        </div>
                    </div>

                    {# Price filter #}
                    <div>
                        <label class="font-medium mb-2 block">Prix :</label>
                        <!-- Conteneur du slider -->
                        <div class="w-72 mx-auto relative pt-6">
                            <!-- Barre de fond -->
                            <div
                                class="absolute top-1/2 left-0 right-0 h-2 bg-gray-200 rounded-md transform -translate-y-1/2">
                            </div>

                            <!-- Barre active -->
                            <div id="slider-track"
                                class="absolute top-1/2 h-2 bg-blue-600 rounded-md transform -translate-y-1/2">
                            </div>

                            <!-- Input min -->
                            <input id="range-min" type="range" min="0" max="500" value="0" class="absolute w-full top-2 h-2 bg-transparent pointer-events-none appearance-none 
                                [&::-webkit-slider-thumb]:appearance-none
                                [&::-webkit-slider-thumb]:w-4 [&::-webkit-slider-thumb]:h-4 
                                [&::-webkit-slider-thumb]:bg-blue-600 
                                [&::-webkit-slider-thumb]:rounded-full
                                [&::-webkit-slider-thumb]:pointer-events-auto 
                                [&::-moz-range-thumb]:w-4 [&::-moz-range-thumb]:h-4
                                [&::-moz-range-thumb]:bg-blue-600 
                                [&::-moz-range-thumb]:rounded-full 
                                [&::-moz-range-thumb]:border-0" />

                            <!-- Input max -->
                            <input id="range-max" type="range" min="0" max="500" value="500" class="absolute w-full top-2 h-2 bg-transparent pointer-events-none appearance-none 
                                [&::-webkit-slider-thumb]:appearance-none
                                [&::-webkit-slider-thumb]:w-4 [&::-webkit-slider-thumb]:h-4 
                                [&::-webkit-slider-thumb]:bg-blue-600 
                                [&::-webkit-slider-thumb]:rounded-full
                                [&::-webkit-slider-thumb]:pointer-events-auto 
                                [&::-moz-range-thumb]:w-4 [&::-moz-range-thumb]:h-4
                                [&::-moz-range-thumb]:bg-blue-600 
                                [&::-moz-range-thumb]:rounded-full 
                                [&::-moz-range-thumb]:border-0" />
                        </div>

                        <!-- Affichage valeurs -->
                        <div class="flex justify-between mt-2 text-sm">
                            <span id="range-min-value">0</span>
                            <span id="range-max-value">500</span>
                        </div>
                    </div>

                    <script>
                        const rangeMin = document.getElementById("range-min");
                        const rangeMax = document.getElementById("range-max");
                        const minValue = document.getElementById("range-min-value");
                        const maxValue = document.getElementById("range-max-value");
                        const track = document.getElementById("slider-track");

                        const minGap = 5; // écart minimum entre min et max

                        function updateTrack() {
                            const percent1 = (rangeMin.value / rangeMin.max) * 100;
                            const percent2 = (rangeMax.value / rangeMax.max) * 100;
                            track.style.left = percent1 + "%";
                            track.style.right = (100 - percent2) + "%";
                            minValue.textContent = rangeMin.value;
                            maxValue.textContent = rangeMax.value;
                        }

                        rangeMin.addEventListener("input", () => {
                            if (parseInt(rangeMax.value) - parseInt(rangeMin.value) <= minGap) {
                                rangeMin.value = parseInt(rangeMax.value) - minGap;
                            }
                            updateTrack();
                        });

                        rangeMax.addEventListener("input", () => {
                            if (parseInt(rangeMax.value) - parseInt(rangeMin.value) <= minGap) {
                                rangeMax.value = parseInt(rangeMin.value) + minGap;
                            }
                            updateTrack();
                        });

                        updateTrack(); // init
                    </script>

                    {# Note filter #}
                    <div class="flex flex-col">
                        <label class="font-medium mb-2">Note minimale :</label>
                        <input type="range" min="0" max="5" id="">
                    </div>

                    {# On sale filter #}
                    <div class="flex gap-2">
                        <input type="checkbox">
                        <label class="font-medium">En promo uniquement</label>
                    </div>

                    <div class="flex flex-col gap-2">
                        {# Apply filters button #}
                        <button type="submit" href="{{ path('app_cheapshark_search') }}"
                            class="bg-blue-600 rounded-lg px-4 py-2 hover:bg-blue-700 text-gray-50 w-full text-center">Appliquer
                            les filtres</button>

                        {# Erase filters button #}
                        <button type="submit" href="{{ path('app_cheapshark_search') }}"
                            class="border border-gray-300 rounded-lg px-4 py-2 hover:bg-gray-100 w-full text-center">Effacer
                            les filtres</button>
                    </div>
                </div>
            </form>

            {# MAIN CONTENT #}
            <div class="flex-1">
                {# TOOL BAR #}
                <div class="bg-white rounded-lg p-4 mb-6 flex flex-col sm:flex-row items-center justify-between gap-4">
                    <div class="flex items-center gap-4 w-full sm:w-auto">
                        {# MOBILE FILTERS #}

                        <div class="text-sm text-gray-600">
                            {{ games|length }} jeu(x) trouvé(s)
                        </div>
                    </div>

                    <div class="flex items-center gap-4 w-full sm:w-auto">
                        {# SORT #}
                        <div class="flex border rounded-md">

                        </div>
                    </div>
                </div>

                {# ACTIVE FILTERS #}

                {# RESULTS #}
                <div class="bg-gray-50 rounded-lg p-6">
                    {% if games is empty %}
                    <div class="text-center py-12">
                        <i class="fa-solid fa-magnifying-glass text-6xl text-gray-300 mx-auto mb-4"></i>
                        <h3 class="text-xl font-medium text-gray-900 mb-2">Aucun jeu trouvé</h3>
                        <p class="text-gray-600 mb-4">Essayez de modifier vos critères de recherche</p>
                        <a href="{{ path('app_cheapshark_search') }}"
                            class="border border-gray-300 rounded-lg px-4 py-2 hover:bg-gray-100">Effacer tous les
                            filtres</a>
                    </div>
                    {% else %}
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                        {% for game in games %}
                        {% include 'cheapshark/_gameCard.html.twig' with { game: game} %}
                        {% endfor %}
                    </div>
                    <div class="pagination" style="margin-top: 20px; display: flex; gap: 5px; flex-wrap: wrap;">

                        {# Lien vers la première page #}
                        {% if options.pageNumber > 0 %}
                        <a href="{{ path('app_cheapshark_search', {
                            'title': options.title, 
                            'stores': stores, 
                            'pageNumber': 0,
                            'pageSize': options.pageSize,
                            'sortBy': options.sortBy,
                            'desc': options.desc,
                            'onSale': options.onSale,
                            'steamRating': options.steamRating,
                            'metacritic': options.metacritic,
                            'lowerPrice': options.lowerPrice,
                            'upperPrice': options.upperPrice
                        }) }}"
                            style="padding:5px 10px; border:1px solid #ccc; text-decoration:none;">1</a>
                        {% endif %}

                        {# Page précédente #}
                        {% if options.pageNumber > 1 %}
                        <a href="{{ path('app_cheapshark_search', {
                            'title': options.title, 
                            'stores': stores, 
                            'pageNumber': options.pageNumber - 1,
                            'pageSize': options.pageSize,
                            'sortBy': options.sortBy,
                            'desc': options.desc,
                            'onSale': options.onSale,
                            'steamRating': options.steamRating,
                            'metacritic': options.metacritic,
                            'lowerPrice': options.lowerPrice,
                            'upperPrice': options.upperPrice                     
                        }) }}"
                            style="padding:5px 10px; border:1px solid #ccc; text-decoration:none;">{{ options.pageNumber
                            }}</a>
                        {% endif %}

                        {# Page courante #}
                        <span
                            style="padding:5px 10px; border:1px solid #000; background-color:#000; color:#fff; font-weight:bold;">{{
                            options.pageNumber + 1 }}</span>

                        {# Page suivante #}
                        {% if games|length == 20 %}
                        <a href="{{ path('app_cheapshark_search', {
                            'title': options.title, 
                            'stores': stores, 
                            'pageNumber': options.pageNumber + 1,
                            'pageSize': options.pageSize,
                            'sortBy': options.sortBy,
                            'desc': options.desc,
                            'onSale': options.onSale,
                            'steamRating': options.steamRating,
                            'metacritic': options.metacritic,
                            'lowerPrice': options.lowerPrice,
                            'upperPrice': options.upperPrice
                        }) }}" style="padding:5px 10px; border:1px solid #ccc; text-decoration:none;">{{
                            options.pageNumber + 2
                            }}</a>
                        {% endif %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

    </div>

    {% endblock %}