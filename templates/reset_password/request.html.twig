{% extends 'base.html.twig' %}

{% block title %}{{'reset_password.title'|trans}}{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>{{'reset_password.title'|trans}}</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email,
        {
            label: 'reset_password.email'|trans
        }) }}
        <div>
            <small>
                {{'reset_password.message'|trans}}
            </small>
        </div>

        <button class="btn btn-primary">{{'reset_password.send_email'|trans}}</button>
    {{ form_end(requestForm) }}
{% endblock %}
