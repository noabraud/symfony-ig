{% extends 'base.html.twig' %}

{% block title %}{{'user_games.title'|trans }}{% endblock %}

{% block body %}

<main class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">{{'user_games.title'|trans }}</h1>

    {% if games is empty %}
        <p class="text-gray-600">{{'user_games.no_games'|trans }}</p>
    {% else %}
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            {% for item in games %}
                <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow">
                    <img src="{{ item.gameImage }}" alt="{{ item.gameTitle }}" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h3 class="text-lg font-semibold mb-2">{{ item.gameTitle }}</h3>
                        <p class="text-gray-700 mb-1">{{'user_games.quantity'|trans }} : {{ item.quantity }}</p>
                        <p class="text-gray-700 mb-1">{{'user_games.price'|trans }} : {{ item.price }} â‚¬</p>
                        <p class="text-gray-500 text-sm">{{'user_games.purchased_on'|trans }} : {{ item.orderItem.createdAt|date('d/m/Y H:i') }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</main>
{% endblock %}