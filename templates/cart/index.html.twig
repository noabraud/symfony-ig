{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
    <h1>Mon Panier</h1>

    {% if items|length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>Jeu</th>
                    <th>Prix</th>
                    <th>Quantité</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.game.title }}</td>
                        <td>{{ item.game.price  }} €</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.game.price * item.quantity  }} €</td>
                        <td>
                            <a href="{{ path('app_cart_remove', {'id': item.game.id}) }}" class="btn btn-danger">Retirer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="3">Total</th>
                    <th>{{ total }} €</th>
                    <th>
                        <a href="{{ path('app_payment_checkout') }}" class="btn btn-success">Payer</a>
                    </th>
                </tr>
            </tfoot>
        </table>
    {% else %}
        <p>Votre panier est vide.</p>
    {% endif %}
{% endblock %}
