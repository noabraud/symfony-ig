{% extends 'base.html.twig' %}

{% block title %}{{ 'cart.title'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'cart.title'|trans }}</h1>

    {% if items|length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>{{ 'cart.game'|trans }}</th>
                    <th>{{ 'cart.price'|trans }}</th>
                    <th>{{ 'cart.quantity'|trans }}</th>
                    <th>{{ 'cart.total'|trans }}</th>
                    <th>{{ 'cart.actions'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.game.title }}</td>
                        <td>{{ item.game.price }} €</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.game.price * item.quantity }} €</td>
                        <td>
                            <a href="{{ path('app_cart_remove', {'id': item.game.id}) }}" class="btn btn-danger">{{ 'cart.remove'|trans }}</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="3">{{ 'cart.total'|trans }}</th>
                    <th>{{ total }} €</th>
                    <th>
                        <a href="{{ path('app_payment_checkout') }}" class="btn btn-success">{{ 'cart.checkout'|trans }}</a>
                    </th>
                </tr>
            </tfoot>
        </table>
    {% else %}
        <p>{{ 'cart.empty'|trans }}</p>
    {% endif %}
{% endblock %}
