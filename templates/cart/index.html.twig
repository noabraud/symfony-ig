{% extends 'base.html.twig' %}

{% block title %}{{ 'cart.title'|trans }}{% endblock %}

{% block body %}
    <h1 class="mb-4">{{ 'cart.title'|trans }}</h1>

    {% if items|length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>{{ 'cart.game'|trans }}</th>
                    <th>{{ 'cart.price'|trans }}</th>
                    <th>{{ 'cart.quantity'|trans }}</th>
                    <th>{{ 'cart.total'|trans }}</th>
                    <th>{{ 'cart.actions'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for dealID, item in items %}
                    <tr>
                        <td>
                            <img src="{{ item.thumb }}" alt="{{ item.title }}" width="80" class="me-2">
                            {{ item.title }}
                        </td>
                        <td>{{ item.price|number_format(2, '.', ' ') }} €</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ (item.price * item.quantity)|number_format(2, '.', ' ') }} €</td>
                        <td>
                            <a href="{{ path('app_cart_remove', {'id': dealID}) }}" class="btn btn-danger">
                                {{ 'cart.remove'|trans }}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="3">{{ 'cart.total'|trans }}</th>
                    <th>{{ total|number_format(2, '.', ' ') }} €</th>
                    <th>
                        <a href="{{ path('app_payment_checkout') }}" class="btn btn-success">
                            {{ 'cart.checkout'|trans }}
                        </a>
                    </th>
                </tr>
            </tfoot>
        </table>
    {% else %}
        <p>{{ 'cart.empty'|trans }}</p>
    {% endif %}
{% endblock %}
